@model BinaryCityMVC.Models.LinkContactViewModel

@{
    ViewData["Title"] = "Link Contact";
}

<h2>Link Contact to @Model.Client.Name</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Surname</th>
            <th>Email</th>
            <th class="text-center">Actions</th> <!-- New column -->
        </tr>
    </thead>
    <tbody>
        @if (Model.AvailableContacts.Any())
        {
            foreach (var contact in Model.AvailableContacts)
            {
                <tr>
                    <td>@contact.Name</td>
                    <td>@contact.Surname</td>
                    <td>@contact.Email</td>
                    <td class="text-center">
                        <form method="post" action="@Url.Action("LinkContact", "Clients", new { id = Model.Client.Id, contactId = contact.Id })">
                            <button type="submit" class="btn btn-primary btn-sm">Link Client</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">No available contacts to link.</td>
            </tr>
        }
    </tbody>
</table>
