@model IEnumerable<BinaryCityMVC.Models.Client>

@{
    ViewData["Title"] = "Clients";
}

<h2>Clients</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Client Code</th>
            <th class="text-center">No. of Linked Contacts</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var client in Model)
            {
                <tr>
                    <td>@client.Name</td>
                    <td>@client.ClientCode</td>
                    <td class="text-center">@client.ClientContacts.Count</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3">No client(s) found.</td>
            </tr>
        }
    </tbody>
</table>