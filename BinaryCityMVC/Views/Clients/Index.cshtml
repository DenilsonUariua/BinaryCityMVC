@model IEnumerable<BinaryCityMVC.Models.Client>

@{
    ViewData["Title"] = "Clients";
}

<h2>Clients</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Client Code</th>
            <th class="text-center">No. of Linked Contacts</th>
            <th class="text-center">Actions</th> <!-- New column for actions -->
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var client in Model)
            {
                <tr>
                    <td>@client.Name</td>
                    <td>@client.ClientCode</td>
                    <td class="text-center">@client.ClientContacts.Count</td>
                    <td class="text-center">
                        <a class="btn btn-primary btn-sm"
                           asp-controller="Clients"
                           asp-action="LinkContact"
                           asp-route-id="@client.Id">
                            Link Contact
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">No client(s) found.</td>
            </tr>
        }
    </tbody>
</table>
